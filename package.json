{
	"name": "@schwigri/ukiyo.site",
	"version": "1.0.0",
	"description": "Source code for my personal site",
	"homepage": "https://www.schwigri.com/",
	"bugs": {
		"url": "https://github.com/schwigri/ukiyo-site/issues"
	},
	"license": "ISC",
	"author": "Griffen Schwiesow",
	"repository": "github:schwigri/ukiyo-site",
	"scripts": {
		"build": "run-s build:translations build:sass build:remix",
		"build:remix": "remix vite:build",
		"build:sass": "node-sass ./app/sass -o ./app/styles --output-style compressed",
		"build:translations": "po2json-gettextjs ./app/lib/i18n/translations/en.po ./app/lib/i18n/translations/en.json && po2json-gettextjs ./app/lib/i18n/translations/de.po ./app/lib/i18n/translations/de.json && po2json-gettextjs ./app/lib/i18n/translations/ja.po ./app/lib/i18n/translations/ja.json",
		"uuid": "uuid",
		"dev": "run-p watch:**",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "cross-env NODE_ENV=production node ./server.js",
		"typecheck": "tsc",
		"watch:remix": "node ./server.js",
		"watch:sass": "npm run build:sass && node-sass -rw ./app/sass -o ./app/styles"
	},
	"dependencies": {
		"@fontsource/m-plus-1": "^5.0.16",
		"@fontsource/prompt": "^5.0.13",
		"@fontsource/work-sans": "^5.0.17",
		"@remix-run/css-bundle": "^2.8.1",
		"@remix-run/express": "^2.8.1",
		"@remix-run/node": "^2.8.1",
		"@remix-run/react": "^2.8.1",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"express": "^4.19.2",
		"fast-xml-parser": "^4.3.6",
		"gettext.js": "^2.0.2",
		"isbot": "^4",
		"morgan": "^1.10.0",
		"node-sass": "^9.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ttag": "^1.8.6"
	},
	"devDependencies": {
		"@fontsource/noto-sans-symbols-2": "^5.0.19",
		"@remix-run/dev": "^2.8.1",
		"@types/compression": "^1.7.5",
		"@types/express": "^4.17.21",
		"@types/gettext.js": "^1.0.3",
		"@types/morgan": "^1.9.9",
		"@types/react": "^18.2.77",
		"@types/react-dom": "^18.2.25",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"eslint": "^8.57.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"npm-run-all": "^4.1.5",
		"subfont": "^7.2.0",
		"typescript": "^5.4.5",
		"uuid": "^9.0.1",
		"vite": "^5.2.8",
		"vite-tsconfig-paths": "^4.3.2"
	},
	"private": true,
	"type": "module"
}
