{
	"name": "@schwigri/ukiyo.site",
	"version": "1.0.0",
	"description": "Source code for my personal site",
	"homepage": "https://www.schwigri.com/",
	"bugs": {
		"url": "https://github.com/schwigri/ukiyo-site/issues"
	},
	"license": "ISC",
	"author": "Griffen Schwiesow",
	"repository": "github:schwigri/ukiyo-site",
	"scripts": {
		"build": "run-s build:sass build:remix",
		"build:remix": "remix build",
		"build:sass": "node-sass ./app/sass -o ./app/styles --output-style compressed",
		"dev": "run-p watch:**",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
		"typecheck": "tsc",
		"watch:remix": "remix dev --manual -c \"npm run start\"",
		"watch:sass": "npm run build:sass && node-sass -rw ./app/sass -o ./app/styles"
	},
	"dependencies": {
		"@fontsource/prompt": "^5.0.9",
		"@fontsource/work-sans": "^5.0.16",
		"@remix-run/cloudflare": "^2.5.1",
		"@remix-run/cloudflare-pages": "^2.5.1",
		"@remix-run/css-bundle": "^2.5.1",
		"@remix-run/react": "^2.5.1",
		"isbot": "^4.4.0",
		"node-sass": "^9.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240117.0",
		"@remix-run/dev": "^2.5.1",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.3.3",
		"wrangler": "^3.25.0"
	},
	"private": true,
	"type": "module"
}
