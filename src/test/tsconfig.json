		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"types": ["nightwatch"]
	},
	"extends": "../tsconfig",
	"include": ["."],
	"ts-node": {
		"transpileOnly": true
	}
}
